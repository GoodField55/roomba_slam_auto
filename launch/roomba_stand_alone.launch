<launch>
  <arg name="config" default="$(find ca_driver)/config/default.yaml" />
  <arg name="desc" default="false" />

  <node name="ca_driver" pkg="ca_driver" type="ca_driver" output="screen">
    <rosparam command="load" file="$(arg config)" />
    <param name="robot_model" value="CREATE_2" />
  </node>

  <node pkg="roomba_slam_auto" name="roomba" type="roomba.py" required="true" />

  <node name="lidar_node" pkg="rplidar_ros" type="rplidarNode" required="true">
    <param name="serial_port" value="/dev/ttyUSB_RPLIDAR"/>
    <param name="frame_id" value="base_link" />
  </node>

  <arg name="scan_topic" default="/scan" />
  <arg name="odom_topic" default="/odom" />

